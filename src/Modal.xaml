<Window x:Class="Filter_Desktop.src.Modal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Filter_Desktop.src"
        mc:Ignorable="d"
        Title="Modal" SizeToContent="WidthAndHeight" MinWidth="300" MinHeight="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ListView x:Name="UrlsListView" Grid.Row="0">
            <!-- Configura tus columnas y estilos aquí -->
        </ListView>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button x:Name="OkButton" Content="Ok" Margin="5" Click="OkButton_Click" />
        </StackPanel>
    </Grid>
</Window>
